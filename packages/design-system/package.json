{
  "name": "@chhimeki/design-system",
  "version": "1.0.0",
  "description": "Chhimeki Design System - Shared UI components, themes, and design tokens",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "npm run build:watch",
    "storybook": "storybook dev -p 6006",
